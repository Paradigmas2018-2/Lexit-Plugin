{
  "name": "Lexit",
  "version": "1.0",
  "description": "Build your lexics",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
     "scripts": ["background.js"],
     "persistent": false
   },
   "options_page": "options.html",
   "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/logo_sample_minimal16.png",
        "32": "images/logo_sample_minimal32.png",
        "48": "images/logo_sample_minimal48.png",
        "128": "images/logo_sample_minimal128.png"
      }
    },
    "icons": {
      "16": "images/logo_sample_minimal16.ico",
      "32": "images/logo_sample_minimal32.png",
      "48": "images/logo_sample_minimal48.png",
      "128": "images/logo_sample_minimal128.png"
    },
  "manifest_version": 2
}
